@model IEnumerable<Breed>
@{
    ViewData["Title"] = "Index";
}

<div class="text-center">
    <h2>Breeds List</h2>
    <hr />
</div>

<div class="d-flex justify-content-end mb-2">
    <a title="add new breed" class="btn btn btn-outline-success" asp-action="Create" asp-controller="Breeds"><i class="bi bi-plus-lg"></i></a>
</div>

<div class="row d-flex justify-content-center">
    <div class="col-12">
        <table class="table table-hover">
            <thead class="table-success">
                <tr>
                    <th class="text-center">@Html.DisplayNameFor(x => x.BreedName)</th>
                    <th class="text-center">@Html.DisplayNameFor(x => x.Description)</th>
                    <th class="text-center">@Html.DisplayNameFor(x => x.AverageAge)</th>
                    <th class="text-center">Action</th>
                </tr>
            </thead>

            <tbody class="table-active">
                @foreach (var b in Model)
                {
                    <tr class="align-middle">
                        <td class="text-center">@b.BreedName</td>
                        <td class="text-center" width="800">@b.Description</td>
                        <td class="text-center">@b.AverageAge</td>
                        <td class="text-center">
                            <a title="Edit" class="btn btn-outline-light" asp-controller="Breeds" asp-action="Edit" asp-route-id="@b.BreedId"><i class="bi bi-pencil"></i></a>
                            <a title="Delete" class="btn btn-outline-light" asp-controller="Breeds" asp-action="Delete" asp-route-id="@b.BreedId"><i class="bi bi-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section styles{
    <link href="~/libs/bootstrap/icons/font/bootstrap-icons.css" rel="stylesheet" />
}